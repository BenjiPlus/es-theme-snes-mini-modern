<!--
Base view definitions for SNES Mini Modern theme
Supports: basic, detailed, video, and grid views
-->

<theme>
    <formatVersion>4</formatVersion>
    
    <!-- ==================== -->
    <!-- SYSTEM VIEW          -->
    <!-- ==================== -->
    <view name="system">
        
        <!-- Background -->
        <image name="background" extra="true">
            <pos>0 0</pos>
            <size>1 1</size>
            <path>./art/backgrounds/colors/blue_spectrum.png</path>
            <tile>false</tile>
            <color>000000FF</color>
        </image>
        
        <!-- Top decoration -->
        <image name="top_decoration" extra="true">
            <pos>0 0</pos>
            <origin>0 0</origin>
            <path>./art/ui/border_top.png</path>
        </image>
        
        <!-- Bottom decoration -->
        <image name="bottom_decoration" extra="true">
            <pos>0 1</pos>
            <origin>0 1</origin>
            <path>./art/ui/border_bottom.png</path>
        </image>
        
        <!-- System carousel -->
        <carousel name="systemcarousel">
            <type>horizontal</type>
            <pos>0.05 0.5</pos>
            <size>0.9 0.3</size>
            <color>00000000</color>
            <logoScale>1.2</logoScale>
            <logoSize>0.15 0.15</logoSize>
            <maxLogoCount>5</maxLogoCount>
            <logoAlignment>center</logoAlignment>
        </carousel>
        
        <!-- System info text -->
        <text name="systemInfo">
            <pos>0.5 0.82</pos>
            <size>0.8 0.08</size>
            <backgroundColor>00000000</backgroundColor>
            <color>FFFFFFFF</color>
            <fontPath>./fonts/NESCyrillic_gamelist.ttf</fontPath>
            <fontSize>0.035</fontSize>
            <alignment>center</alignment>
        </text>
        
        <!-- Help system -->
        <helpsystem name="help">
            <pos>0.02 0.95</pos>
            <textColor>FFFFFFCC</textColor>
            <iconColor>FFFFFFCC</iconColor>
            <fontPath>./fonts/TinyUnicode.ttf</fontPath>
            <fontSize>0.025</fontSize>
        </helpsystem>
        
    </view>
    
    <!-- ==================== -->
    <!-- BASIC VIEW           -->
    <!-- ==================== -->
    <view name="basic">
        
        <!-- Background -->
        <image name="background" extra="true">
            <pos>0 0</pos>
            <size>1 1</size>
            <path>./art/ui/gamelist_background.png</path>
            <tile>false</tile>
        </image>
        
        <!-- Top border -->
        <image name="top_border" extra="true">
            <pos>0 0</pos>
            <origin>0 0</origin>
            <path>./art/ui/border_top.png</path>
        </image>
        
        <!-- Bottom border -->
        <image name="bottom_border" extra="true">
            <pos>0 1</pos>
            <origin>0 1</origin>
            <path>./art/ui/border_bottom.png</path>
        </image>
        
        <!-- System logo -->
        <image name="logo">
            <pos>0.08 0.08</pos>
            <maxSize>0.25 0.12</maxSize>
            <origin>0 0</origin>
        </image>
        
        <!-- Game list -->
        <textlist name="gamelist">
            <pos>0.08 0.22</pos>
            <size>0.35 0.58</size>
            <selectorColor>E31E24FF</selectorColor>
            <selectedColor>FFFFFFFF</selectedColor>
            <primaryColor>FFFFFFDD</primaryColor>
            <secondaryColor>FFFFFF88</secondaryColor>
            <fontPath>./fonts/NESCyrillic_gamelist.ttf</fontPath>
            <fontSize>0.032</fontSize>
            <alignment>left</alignment>
            <horizontalMargin>0.01</horizontalMargin>
            <lineSpacing>1.5</lineSpacing>
            <selectorHeight>0.065</selectorHeight>
            <selectorOffsetY>-0.01</selectorOffsetY>
        </textlist>
        
        <!-- Box art -->
        <image name="md_image">
            <pos>0.55 0.35</pos>
            <maxSize>0.35 0.45</maxSize>
            <origin>0.5 0.5</origin>
        </image>
        
        <!-- Help system -->
        <helpsystem name="help">
            <pos>0.02 0.95</pos>
            <textColor>E31E24FF</textColor>
            <iconColor>E31E24FF</iconColor>
            <fontPath>./fonts/TinyUnicode.ttf</fontPath>
            <fontSize>0.025</fontSize>
        </helpsystem>
        
    </view>
    
    <!-- ==================== -->
    <!-- DETAILED VIEW        -->
    <!-- ==================== -->
    <view name="detailed">
        
        <!-- Background -->
        <image name="background" extra="true">
            <pos>0 0</pos>
            <size>1 1</size>
            <path>./art/ui/gamelist_background.png</path>
            <tile>false</tile>
        </image>
        
        <!-- Top border -->
        <image name="top_border" extra="true">
            <pos>0 0</pos>
            <origin>0 0</origin>
            <path>./art/ui/border_top.png</path>
        </image>
        
        <!-- Bottom border -->
        <image name="bottom_border" extra="true">
            <pos>0 1</pos>
            <origin>0 1</origin>
            <path>./art/ui/border_bottom.png</path>
        </image>
        
        <!-- Shadow overlay for preview area -->
        <image name="shadow_overlay" extra="true">
            <pos>0.5 0.35</pos>
            <size>0.5 0.5</size>
            <origin>0.5 0.5</origin>
            <path>./art/ui/shadow_overlay.png</path>
            <color>FFFFFF66</color>
        </image>
        
        <!-- System logo -->
        <image name="logo">
            <pos>0.08 0.08</pos>
            <maxSize>0.25 0.12</maxSize>
            <origin>0 0</origin>
        </image>
        
        <!-- Game list -->
        <textlist name="gamelist">
            <pos>0.08 0.22</pos>
            <size>0.35 0.58</size>
            <selectorColor>E31E24FF</selectorColor>
            <selectedColor>FFFFFFFF</selectedColor>
            <primaryColor>FFFFFFDD</primaryColor>
            <secondaryColor>FFFFFF88</secondaryColor>
            <fontPath>./fonts/NESCyrillic_gamelist.ttf</fontPath>
            <fontSize>0.032</fontSize>
            <alignment>left</alignment>
            <horizontalMargin>0.01</horizontalMargin>
            <lineSpacing>1.5</lineSpacing>
            <selectorHeight>0.065</selectorHeight>
            <selectorOffsetY>-0.01</selectorOffsetY>
        </textlist>
        
        <!-- Screenshot/Marquee -->
        <image name="md_image">
            <pos>0.66 0.35</pos>
            <maxSize>0.4 0.35</maxSize>
            <origin>0.5 0.5</origin>
        </image>
        
        <!-- Bezel frame for image -->
        <image name="bezel_frame" extra="true">
            <pos>0.66 0.35</pos>
            <size>0.45 0.4</size>
            <origin>0.5 0.5</origin>
            <path>./art/ui/bezel_frame.png</path>
            <color>FFFFFFCC</color>
        </image>
        
        <!-- Game name -->
        <text name="md_name">
            <pos>0.46 0.58</pos>
            <size>0.5 0.05</size>
            <fontPath>./fonts/NESCyrillic_gamelist.ttf</fontPath>
            <fontSize>0.038</fontSize>
            <color>FFFFFFFF</color>
            <alignment>center</alignment>
        </text>
        
        <!-- Description -->
        <text name="md_description">
            <pos>0.46 0.65</pos>
            <size>0.5 0.2</size>
            <fontPath>./fonts/NESCyrillic_gamelist2.ttf</fontPath>
            <fontSize>0.022</fontSize>
            <color>FFFFFFDD</color>
            <alignment>left</alignment>
            <lineSpacing>1.2</lineSpacing>
        </text>
        
        <!-- Metadata labels -->
        <text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount">
            <pos>1 1</pos>
            <size>0 0</size>
            <color>00000000</color>
        </text>
        
        <!-- Help system -->
        <helpsystem name="help">
            <pos>0.02 0.95</pos>
            <textColor>E31E24FF</textColor>
            <iconColor>E31E24FF</iconColor>
            <fontPath>./fonts/TinyUnicode.ttf</fontPath>
            <fontSize>0.025</fontSize>
        </helpsystem>
        
    </view>
    
    <!-- ==================== -->
    <!-- VIDEO VIEW           -->
    <!-- ==================== -->
    <view name="video">
        
        <!-- Background -->
        <image name="background" extra="true">
            <pos>0 0</pos>
            <size>1 1</size>
            <path>./art/ui/gamelist_background.png</path>
            <tile>false</tile>
        </image>
        
        <!-- Top border -->
        <image name="top_border" extra="true">
            <pos>0 0</pos>
            <origin>0 0</origin>
            <path>./art/ui/border_top.png</path>
        </image>
        
        <!-- Bottom border -->
        <image name="bottom_border" extra="true">
            <pos>0 1</pos>
            <origin>0 1</origin>
            <path>./art/ui/border_bottom.png</path>
        </image>
        
        <!-- Shadow overlay for video area -->
        <image name="shadow_overlay" extra="true">
            <pos>0.5 0.35</pos>
            <size>0.5 0.5</size>
            <origin>0.5 0.5</origin>
            <path>./art/ui/shadow_overlay.png</path>
            <color>FFFFFF66</color>
        </image>
        
        <!-- System logo -->
        <image name="logo">
            <pos>0.08 0.08</pos>
            <maxSize>0.25 0.12</maxSize>
            <origin>0 0</origin>
        </image>
        
        <!-- Game list -->
        <textlist name="gamelist">
            <pos>0.08 0.22</pos>
            <size>0.35 0.58</size>
            <selectorColor>E31E24FF</selectorColor>
            <selectedColor>FFFFFFFF</selectedColor>
            <primaryColor>FFFFFFDD</primaryColor>
            <secondaryColor>FFFFFF88</secondaryColor>
            <fontPath>./fonts/NESCyrillic_gamelist.ttf</fontPath>
            <fontSize>0.032</fontSize>
            <alignment>left</alignment>
            <horizontalMargin>0.01</horizontalMargin>
            <lineSpacing>1.5</lineSpacing>
            <selectorHeight>0.065</selectorHeight>
            <selectorOffsetY>-0.01</selectorOffsetY>
        </textlist>
        
        <!-- Video preview -->
        <video name="md_video">
            <pos>0.66 0.35</pos>
            <maxSize>0.4 0.35</maxSize>
            <origin>0.5 0.5</origin>
            <delay>0.75</delay>
            <showSnapshotNoVideo>true</showSnapshotNoVideo>
            <showSnapshotDelay>true</showSnapshotDelay>
        </video>
        
        <!-- Bezel frame for video -->
        <image name="bezel_frame" extra="true">
            <pos>0.66 0.35</pos>
            <size>0.45 0.4</size>
            <origin>0.5 0.5</origin>
            <path>./art/ui/bezel_frame.png</path>
            <color>FFFFFFCC</color>
        </image>
        
        <!-- Light glow on video -->
        <image name="light_glow" extra="true">
            <pos>0.66 0.35</pos>
            <size>0.5 0.45</size>
            <origin>0.5 0.5</origin>
            <path>./art/ui/light_glow.png</path>
            <color>FFFFFF33</color>
        </image>
        
        <!-- Game name -->
        <text name="md_name">
            <pos>0.46 0.58</pos>
            <size>0.5 0.05</size>
            <fontPath>./fonts/NESCyrillic_gamelist.ttf</fontPath>
            <fontSize>0.038</fontSize>
            <color>FFFFFFFF</color>
            <alignment>center</alignment>
        </text>
        
        <!-- Description -->
        <text name="md_description">
            <pos>0.46 0.65</pos>
            <size>0.5 0.2</size>
            <fontPath>./fonts/NESCyrillic_gamelist2.ttf</fontPath>
            <fontSize>0.022</fontSize>
            <color>FFFFFFDD</color>
            <alignment>left</alignment>
            <lineSpacing>1.2</lineSpacing>
        </text>
        
        <!-- Marquee (hidden behind video) -->
        <image name="md_marquee">
            <pos>2 2</pos>
        </image>
        
        <!-- Help system -->
        <helpsystem name="help">
            <pos>0.02 0.95</pos>
            <textColor>E31E24FF</textColor>
            <iconColor>E31E24FF</iconColor>
            <fontPath>./fonts/TinyUnicode.ttf</fontPath>
            <fontSize>0.025</fontSize>
        </helpsystem>
        
    </view>
    
    <!-- ==================== -->
    <!-- GRID VIEW            -->
    <!-- ==================== -->
    <view name="grid">
        
        <!-- Background -->
        <image name="background" extra="true">
            <pos>0 0</pos>
            <size>1 1</size>
            <path>./art/ui/gamelist_background.png</path>
            <tile>false</tile>
        </image>
        
        <!-- Top border -->
        <image name="top_border" extra="true">
            <pos>0 0</pos>
            <origin>0 0</origin>
            <path>./art/ui/border_top.png</path>
        </image>
        
        <!-- Bottom border -->
        <image name="bottom_border" extra="true">
            <pos>0 1</pos>
            <origin>0 1</origin>
            <path>./art/ui/border_bottom.png</path>
        </image>
        
        <!-- System logo -->
        <image name="logo">
            <pos>0.5 0.08</pos>
            <maxSize>0.3 0.12</maxSize>
            <origin>0.5 0</origin>
        </image>
        
        <!-- Grid of game images -->
        <imagegrid name="gamegrid">
            <pos>0.05 0.22</pos>
            <size>0.9 0.62</size>
            <margin>0.01 0.01</margin>
            <padding>0.02 0.02</padding>
            <autoLayout>5 3</autoLayout>
            <autoLayoutSelectedZoom>1.1</autoLayoutSelectedZoom>
            <animateSelection>true</animateSelection>
            <scrollDirection>vertical</scrollDirection>
            <centerSelection>true</centerSelection>
            <scrollLoop>false</scrollLoop>
        </imagegrid>
        
        <!-- Grid tile background -->
        <ninepatch name="gridtile.background">
            <color>00000066</color>
            <cornerSize>8 8</cornerSize>
            <padding>16 16</padding>
        </ninepatch>
        
        <!-- Selected tile glow -->
        <image name="gridtile.selected" extra="true">
            <path>./art/ui/light_glow.png</path>
            <color>E31E2488</color>
        </image>
        
        <!-- Game name under grid -->
        <text name="md_name">
            <pos>0.05 0.86</pos>
            <size>0.5 0.05</size>
            <fontPath>./fonts/NESCyrillic_gamelist.ttf</fontPath>
            <fontSize>0.035</fontSize>
            <color>FFFFFFFF</color>
            <alignment>left</alignment>
        </text>
        
        <!-- Metadata on right -->
        <text name="md_description">
            <pos>0.55 0.86</pos>
            <size>0.4 0.08</size>
            <fontPath>./fonts/NESCyrillic_gamelist2.ttf</fontPath>
            <fontSize>0.020</fontSize>
            <color>FFFFFFDD</color>
            <alignment>left</alignment>
            <lineSpacing>1.2</lineSpacing>
        </text>
        
        <!-- Help system -->
        <helpsystem name="help">
            <pos>0.02 0.95</pos>
            <textColor>E31E24FF</textColor>
            <iconColor>E31E24FF</iconColor>
            <fontPath>./fonts/TinyUnicode.ttf</fontPath>
            <fontSize>0.025</fontSize>
        </helpsystem>
        
    </view>
    
</theme>
